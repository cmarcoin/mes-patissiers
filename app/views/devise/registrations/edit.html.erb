<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Editez votre compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :first_name, label: "Prénom" %>
          <%= f.input :last_name, label: "Nom" %>
          <%= f.input :address, label: "Adresse" %>
          <%= f.input :phone_number, label: "Numéro de téléphone" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, label: "Nouveau mot de passe", autocomplete: "off", hint: "pas obligatoire", required: false %>
          <%= f.input :password_confirmation, label: "Confirmez le nouveau mot de passe",required: false %>
          <%= f.input :current_password, label: "Mot de passe actuel", hint: "Veuillez entrer votre mot de passe actuel pour confirmer vos changements", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: "btn btn-primary"%>
        </div>
      <% end %>

      <h3>Supprimer mon compte</h3>

      <p>Supprimer mon compte ? <%= link_to "Supprimer", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete%></p>

      <%= link_to "retour", :back %>
    </div>
  </div>
</div>
