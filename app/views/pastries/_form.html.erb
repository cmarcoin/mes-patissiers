<%= simple_form_for @pastry do |f| %>
   <%=f.input :name, placeholder: "Nom", label: "Le nom de votre pâtisserie"%>
   <%=f.input :description, label: "Sa description" %>
   <%=f.input :slices, label: "A combien pour la manger ?", placeholder: "8" %>
   <%=f.input :price, label: "Votre prix de vente" , placeholder: "16 €"%>
   <%=f.input :order_warning, label: "Délai", placeholder: "2 jours" %>
   <%=f.button :submit, "Ajouter", class: "btn btn-primary" %>
<% end %>
