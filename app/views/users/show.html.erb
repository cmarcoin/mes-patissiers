<h1 class="text-center">Votre profil</h1>

<hr>

<div class="container">

  <div class="row">


    <div class="col-sm-4 col-sm-offset-2">

      <div> <h2>Vos infos</h2><p><%= link_to "Editer mon profil", edit_user_registration_path %></p></div>
      <ul class="list-group">
        <li class="list-group-item"><%= @user.first_name %></li>
        <li class="list-group-item"><%= @user.last_name %></li>
        <li class="list-group-item"><%= @user.address %></li>
        <li class="list-group-item"><%= @user.is_baker %></li>
        <li class="list-group-item"><%= @user.email %></li>
        <li class="list-group-item"><%= @user.phone_number %></li>
        <li class="list-group-item"><%= @user.description %></li>
      </ul>

    </div>

    <div class="col-sm-4">

      <h2>Vos commandes</h2>
      <ul class="list-group">

        <% @user.orders.each do |order| %>

        <li class="list-group-item"><%= order.pastry.name %> - <%= order.status %> - <%= order.delivery_date %></li>

        <% end %>

      </ul>

    </div>

  </div>

</div>
